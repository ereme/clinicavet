{% extends 'base.html.twig' %}


{% block body %}

<h1>Listado de clientes</h1>
<div id="tabla">
	<table class="table">
            <thead>
                <tr>
                    <th>CLIENTE</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for cliente in vectorclientes %}
                <tr>
                    <td>{{ cliente.nombre }}</td>
                    <td><a href="{{path('cliente_detalle', {'id': cliente.id}) }}"> Mostrar</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
</div>
 

{% endblock %}  